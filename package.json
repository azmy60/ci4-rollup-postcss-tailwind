{
  "name": "ci4-rollup-postcss-tailwind",
  "version": "1.0.0",
  "description": "Simple todo list app with CodeIgniter 4, Rollup, PostCSS, and Tailwind CSS",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rimraf public/scripts public/styles & mkdirp public/scripts public/styles",
    "build:js": "rollup -c",
    "build:css": "postcss src/styles/tailwind.css -o public/styles/main.css",
    "build": "run-s build:* -s",
    "watch:app": "live-server --no-browser --port=5500 --watch=app/Views,public",
    "watch:js": "rollup -c -w --no-watch.clearScreen",
    "watch:css": "postcss src/styles/tailwind.css -o public/styles/main.css --watch",
    "serve": "php spark serve",
    "start": "cross-env NODE_ENV=development run-p serve watch:* -s",
    "production": "cross-env NODE_ENV=production run-s clean build"
  },
  "author": "azmy60",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@tailwindcss/forms": "^0.4.0",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "live-server": "^1.2.1",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.0.1",
    "postcss-import": "^14.0.2",
    "postcss-reporter": "^7.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.3",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^23.0.0",
    "tailwindcss": "^3.0.23"
  }
}
